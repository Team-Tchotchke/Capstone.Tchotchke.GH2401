generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id            Int      @id @default(autoincrement())
  name          String
  desc          String
  imgURL        String
  price         Int
  category_name String
  rating        Float
  Orders        Orders[]
}

model Users {
  id       Int      @id @default(autoincrement())
  name     String
  email    String
  password String
  Orders   Orders[]
}

model Orders {
  id                   Int      @id @default(autoincrement())
  customer             Users    @relation(fields: [usersId], references: [id])
  item                 Products @relation(fields: [productsId], references: [id])
  purchase_total       Int
  purchase_create_date DateTime
  usersId              Int
  productsId           Int
}
